<!DOCTYPE html>
<html>
<body>


<p id="demo">254</p>

<script>

  var time = new Date().getHours();
  if (time < 7) {
    document.getElementById("demo").innerHTML = "Good Morning";
  }else if (time < 17) {
    document.getElementById("demo").innerHTML = "Good Day";
  }else if (time < 23) {
    demo.style.display = "none";
  }else{
  	demo.style.display = "block";
  }

</script>

</body>
</html>
